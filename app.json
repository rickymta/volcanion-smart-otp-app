{
  "expo": {
    "name": "SmartOTP",
    "slug": "smart-otp-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartotp.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "We use Face ID to securely access your OTP codes.",
        "NSCameraUsageDescription": "We need camera access to scan QR codes for adding OTP accounts."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.smartotp.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow SmartOTP to use Face ID."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow SmartOTP to access camera for QR scanning."
        }
      ]
    ]
  }
}
